<!--Title, Media, and Action area -->
<div class="pmd-card pmd-card-media-inline pmd-z-depth">

  <!-- Card media -->
  <div class="pmd-card-media">
    <!-- Card media heading -->
    <div class="media-body">
      <h2 class="pmd-card-title-text">
        <%= link_to(post.title, post) %>
        <% if current_user %>
          <div class="bookmark_status">
            <% if current_user.bookmarked(post) %>
                <%= link_to un_checked_path(post.id) do %> 
                  <i class="fa fa-star star"></i>
                <% end %>
            <% else %>
              <%= link_to checked_path(post.id) do %> 
                <i class="fa fa-star-o star"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </h2><br>
      <%= render "posts/post_tag", post: post %>
      <span class="pmd-card-subtitle-text">
        <p><%= (post.content).truncate(100) %></p>
      </span>
      <p class="post-meta">Posted by <a href="https://github.com/tunglt-0058/my_blog">Kai</a> on <%= post.created_at.strftime("%B %d %Y") %></p>
    </div>

    <!-- Card media image -->
    <div class="media-right media-middle">
      <a href="javascript:void(0);">
        <img width="152" height="152" src=<%= post.image %>>
      </a>
    </div>
  </div>
  <% if current_user && current_user == post.user %>
    <%= render "posts/post_action", post: post %>
  <% end %>
</div>
