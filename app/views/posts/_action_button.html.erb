<% if current_user == post.user %>
  <%= link_to edit_post_path(post) do %>
    <button class="btn pmd-btn-flat pmd-ripple-effect btn-primary" type="button">Edit</button>
  <% end %>
  <%= link_to post, method: :delete, data: {confirm: "Are you sure?"} do %>
    <button type="button" class="btn pmd-btn-flat pmd-ripple-effect btn-default">Delete</button>
  <% end %>
<% end %>
