<%= form_for category, remote: true do |f| %>
  <div class="post-form-errors">
    <% if category.errors.any? %>
      <%= render "shared/error_messages", object: category %>
    <% end %>
  </div>
  <div class="field">
    <label>Name: </label>
    <%= f.text_field :name, placeholder: "Enter your name of category",
                     class: "form-control title" %>
  </div>
  <div class="actions">
    <%= link_to "Cancel" , root_path,
                class: "btn btn-danger btn-cancel-post" %>
    <%= f.submit "Save", class: "btn btn-primary btn-submit-post" %>
  </div>
  <div class="clearfix"></div>
<% end %>
